<div class="container mt-4 mb-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="card-title mb-4"><%= @patient.first_name %> <%= @patient.last_name %></h1>
      <div class="card">
        <div class="card-body">
          <p class="card-text fs-5">
            <strong class="text-success me-1">Name:</strong>
            <%= @patient.first_name %>
          </p>
          <p class="card-text fs-5">
            <strong class="text-success me-1">Surname:</strong>
            <%= @patient.last_name %>
          </p>
          <% for pet in @patient.pets %>
            <p class="card-text fs-5">
              <strong class="text-success me-1">Pet:</strong>
              <%= link_to pet.name, pet_path(pet), class: "text-decoration-none" %>
              <span style="color: grey;"> - <%= pet.animal %></span>
            </p>
          <% end %>
          <p class="card-text fs-5">
            <strong class="text-success me-1">Email:</strong>
            <%= @patient.email %>
          </p>
          <p class="card-text fs-5">
            <strong class="text-success me-1">Phone:</strong>
            <%= @patient.phone %>
          </p>
          <%= link_to 'Edit', edit_patient_path(@patient), class: 'btn btn-warning btn-lg mt-1' %>
        </div>
      </div>
    </div>
  </div>
</div>