<h1>Listing Users</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Position</th>
            <th>Admin</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.position %></td>
            <td><%= user.is_admin ? 'Yes' : 'No' %></td>
            <td>
            <%= link_to 'Edit', edit_admin_user_path(user) %>
            <!-- Add other actions as needed -->
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
