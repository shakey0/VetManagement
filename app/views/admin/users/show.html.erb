<h1>User Profile</h1>

<p>
    <strong>Name:</strong>
    <%= @user.first_name %>
</p>

<p>
    <strong>Last Name:</strong>
    <%= @user.last_name %>
</p>

<p>
    <strong>Email:</strong>
    <%= @user.email %>
</p>

<p>
    <strong>Phone:</strong>
    <%= @user.phone %>
</p>

<p>
    <strong>Position:</strong>
    <%= @user.position %>
</p>

<p>
    <strong>Admin:</strong>
    <%= @user.is_admin ? 'Yes' : 'No' %>
</p>

<%= link_to 'Edit', edit_admin_user_path(@user) %> |
