<div class="container mt-4 mb-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="card-title mb-4"><%= @user.first_name %> <%= @user.last_name %></h1>
      <div class="card">
        <div class="card-body">
          <p class="card-text fs-5">
            <strong class="text-primary me-1">Name:</strong>
            <%= @user.first_name %>
          </p>
          <p class="card-text fs-5">
            <strong class="text-primary me-1">Last Name:</strong>
            <%= @user.last_name %>
          </p>
          <p class="card-text fs-5">
            <strong class="text-primary me-1">Email:</strong>
            <%= @user.email %>
          </p>
          <p class="card-text fs-5">
            <strong class="text-primary me-1">Phone:</strong>
            <%= @user.phone %>
          </p>
          <p class="card-text fs-5">
            <strong class="text-primary me-1">Position:</strong>
            <%= @user.position %>
          </p>
          <p class="card-text fs-5">
            <strong class="text-primary me-1">Admin:</strong>
            <%= @user.is_admin ? 'Yes' : 'No' %>
          </p>
          <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-warning btn-lg mt-1' %>
        </div>
      </div>
    </div>
  </div>
</div>
